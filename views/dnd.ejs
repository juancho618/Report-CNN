<!DOCTYPE html>
<html>

<head>
    <% include ./partials/head %>
</head>

<body ng-app="reportApp" ng-controller="dndController as dnd">


    <div ng-cloak>
        <md-content>
            <md-tabs md-dynamic-height md-border-bottom>
                <md-tab label="{{tab.label}}" ng-repeat="tab in dnd.tabs">
                    <md-content class="md-padding">
                        <div layout="row">
                            <div layout="column" flex="33">
                                <md-card>
                                    <md-card-content layout="row">
                                        <div flex="20" layout-align="center center" layout="column">
                                            <div>9</div>
                                            <span>Hit points</span>
                                        </div>
                                        <span>2</span>
                                    </md-card-content>
                                </md-card>
                                <div flex="33">
                                    <div layout="column">

                                        <md-card ng-repeat="attr in dnd.attributes">
                                            <md-card-content>
                                                <div layout="row">
                                                    <div layout="column" layout-align="center center" flex='33'>
                                                        <div>
                                                            {{attr.value}}
                                                        </div>
                                                        <div>
                                                            + {{attr.bonus}}
                                                        </div>
                                                    </div>

                                                    <div layout="row" flex='66'>
                                                        {{attr.name}}
                                                    </div>
                                                </div>

                                            </md-card-content>
                                        </md-card>
                                    </div>
                                </div>


                            </div>
                        </div>


                    </md-content>
                </md-tab>
            </md-tabs>
        </md-content>
    </div>
    <% include ./partials/scripts %>


        <script type='text/javascript' src="/public/app/controllers/dndController.js"></script>
</body>