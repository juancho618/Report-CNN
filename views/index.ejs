
<!DOCTYPE html>
<html>
    <head>
        <% include ./partials/head %>      
            <style>
                .hover01 {
                    -webkit-transform: scale(1);
                    transform: scale(1);
                    -webkit-transition: .3s ease-in-out;
                    transition: .3s ease-in-out;
                }
                .hover01:hover {
                    -webkit-transform: scale(2);
                    transform: scale(2);
                }
            </style>
    </head>
<body ng-app="reportApp" ng-controller="reportController as report">
    <% include ./partials/nav %>
    <h1 class="md-display-1" style="margin:8px">First Training Data Used (3264*2330)</h1>   
    
    <div layout="row">
            <md-button ng-repeat="btn in report.images" class="md-primary md-raised"  type="button" ng-click="report.btnAction(btn.name)">{{btn.buttonText}}</md-button>      
    </div>
    <div layout="column">
            <div ng-repeat="image in report.images">
                    <div style="min-width:100%" ng-if="report[image.name]" ng-show="report.imgType == '{{image.name}}'"> 
                        <div ng-repeat="x in  [] | range:(image.height)" style="margin-bottom: -4px;" layout="row">
                            <div ng-repeat="y in  [] | range:(image.width)">    
                                    <img width="28" height="28" class="hover01"  ng-src="/loadImage?num={{((image.width/64)| floor)*x + y}}&name={{image.name}}" ng-click="report.showDialog($event, 20)">
                            </div>
                        </div>   
                    </div>
            </div>
          
    </div>
    

    <!-- <script type="text/javascript" src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.5/angular.min.js'></script> -->
    <% include ./partials/scripts %>
   
    <script type='text/javascript' src="/public/app/controllers/reportController.js"></script>
    
</body>
</html>